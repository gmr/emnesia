%%-*- mode: erlang -*-

{erl_opts, [
    {parse_transform, lager_transform}
]}.

{cover_enabled, true}.

{clean_files, ["*.eunit", "ebin/*.beam"]}.

{deps, [
    {edown, ".*", {git, "https://github.com/esl/edown.git", "HEAD"}},
    {lager, ".*", {git, "https://github.com/basho/lager.git", {tag, "2.1.0"}}}
]}.

{edoc_opts, [
    {app_default, "http://www.erlang.org/doc/man"},
    {doclet, edown_doclet},
    {image, ""},
    {includes, ["include"]},
    {preprocess, true},
    {stylesheet, ""},
    {title, "emnesia"},
    {edown_target, github}
]}.
